  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "OpenIdServerCertificate": {
    "Filename": "Configurations/cert.pfx",
    "Password":  ""
  },
  "Initial": {
    "Application": {
      "BlazorClient": {
        "Uri": ""
      }
    },
    "AdminUser": {
      "EmailAddress": "",
      "Password": ""
    },
    "OpenIdClient": {
      "Customer": {
        "Id": "client.customer",
        "DisplayName": "Doitsu Ecommerce Client Site",
        "Uri": "https://localhost:5001"
      },
      "Admin": {
        "Id": "client.admin",
        "DisplayName": "Doitsu Ecommerce Admin Site",
